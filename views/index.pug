extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Ben C's Javascript Portfolio Page
      p.lead.text-light
        | A collection of front-end javascript projects displayed using Node, Express, and Pug
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      //- goes through each item in projects variable
      each project in projects
        .cell
          //- adds id to each URL, adds image source, and project name
          a(href= "/projects/" + project.id)
            img.thumbnail(src= project.image_urls[0])
            h5= project.project_name
    